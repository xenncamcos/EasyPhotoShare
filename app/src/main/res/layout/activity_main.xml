<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6pt">

            <TextView
                android:id="@+id/main_txt_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="操作"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/main_btn_start"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:height="60dp"
                android:backgroundTint="#7793FA"
                android:enabled="false"
                android:text="シェアの開始"
                android:textSize="18sp" />

            <Button
                android:id="@+id/main_btn_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:height="60dp"
                android:backgroundTint="#FF8080"
                android:enabled="false"
                android:text="シェアの停止"
                android:textSize="18sp" />

            <Button
                android:id="@+id/main_btn_sel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="60dp"
                android:backgroundTint="#7DDF94"
                android:enabled="false"
                android:text="フォルダの選択"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="5pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ホスト名  "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <EditText
                android:id="@+id/main_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/main_chk_hotspot"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOTSPOTの起動を有効にする"
                android:textSize="18sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/main_txt_info_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="状態"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/main_btn_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:height="56dp"
                    android:enabled="false"
                    android:text="リンクコピー"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/main_btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:height="56dp"
                    android:enabled="false"
                    android:text="リンク共有"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/main_btn_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="56dp"
                    android:enabled="false"
                    android:text="QR表示"
                    android:textSize="16sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="10pt" />

            <TextView
                android:id="@+id/main_txt_info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="サービスが起動されていません\n"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#135DF7"
                android:textColorLink="#5772FF" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
